---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
---

<StarlightPage frontmatter={{ title: 'Page Not Found', description: 'Could not find what you were looking for.' }}>
	<div style="text-align: center; padding: 2rem 0;">
		<h1>404 - Page Not Found</h1>
		<p>Sorry, we couldn't find the page you were looking for.</p>
		<a href="/" style="display: inline-block; margin-top: 1rem; padding: 0.5rem 1rem; background-color: var(--sl-color-accent); color: white; border-radius: 0.375rem; text-decoration: none; font-weight: 500;">
			Back Home
		</a>
	</div>
</StarlightPage>
